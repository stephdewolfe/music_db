<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>
       <%= @artist.name %>
      </h1>

      <p>
        <strong>Genre:</strong>
        <%= link_to @artist.genre.name, genre_path(artist.genre)%>
      </p>

      <h3> Songs </h3>
      <ul> @artists.songs.each do |ditty|
          <li> <%=ditty.name %></li>
        <% end %>
      </ul>





      <%= link_to 'Edit', edit_song_path(@artist), class: 'btn btn-default' %>
      <%= link_to 'Back', song_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>